{
    "name": "Line Break remover",
    "version": "1.0",
    "description": "Remove Line Breaks when copying from PDFs!",
    "background":{
        "scripts": ["text.js"],
        "persistent": false
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["ContentScript.js"]
        }
        ],
    "commands": {
        "copy" : {
            "suggested_key": {
                 "default": "Shift+Ctrl+X" 
            },
            "description": "Copy a text"
        }
    },
    "permissions": [
        "tabs",
        "background",
        "clipboardRead",
        "clipboardWrite"
      ]   
}